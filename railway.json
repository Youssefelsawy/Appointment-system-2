{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "base": "backend",
    "builder": "nixpacks",
    "variables": {
      "NODE_ENV": "production",
      "PORT": "5000"
    }
  },
  "deploy": {
    "startCommand": "npm run migrate && npm start",
    "healthcheckPath": "/health",
    "restartPolicy": {
      "maxRetries": 3
    }
  }
}
